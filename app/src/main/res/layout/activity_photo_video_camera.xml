<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhotoVideoCamera">

    <TextureView
        android:id="@+id/textureView_03"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="200dp"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_15"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:onClick="onClickButton_15"
                android:text="動画撮影" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_04"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button_16"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:onClick="onClickButton_16"
                android:text="モード切替" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_03"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button_14"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:onClick="onClickButton_14"
                android:text="カメラ切替" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_12"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:onClick="onClickButton_12"
                android:text="戻る" />

            <Space
                android:layout_width="100dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/button_13"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:onClick="onClickButton_13"
                android:text="カメラ起動" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>