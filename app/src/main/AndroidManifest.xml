<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.testapp_003">
    <!-- Permission -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TestApp_003"
        android:hardwareAccelerated="true">
        <activity android:name=".QrCamera"></activity>
        <activity android:name=".PhotoVideoQrCamera" />
        <activity android:name=".PhotoVideoCamera" />
        <activity android:name=".VideoCamera" />
        <activity android:name=".PhotoCamera" />
        <activity android:name=".DeviceInfo" />
        <activity android:name=".CameraInfo" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>